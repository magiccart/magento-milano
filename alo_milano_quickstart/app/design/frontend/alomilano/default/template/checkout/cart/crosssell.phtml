<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount()): ?>
<?php
    $width  = Mage::getStoreConfig('alothemes/list/widthImages'); //290;
    $height = Mage::getStoreConfig('alothemes/list/heightImages'); //370;
?>
<div class="crosssell">
    <div class="block-title">
        <h3><span><?php echo $this->__('Cross sells') ?></span></h3>
    </div>
    <ul id="crosssell-products-list">
    <?php foreach ($this->getItems() as $_item): ?>
        <li class="item">
            <div class="per-product">
                <div class="images-container">
                    <a class="product-image" href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>"><img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize($width, $height); ?>" width="<?php echo $width ?>" height="<?php echo $height ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                    <div class="actions-no hover-box">
                         <a class="detail_links" href="<?php echo $_item->getProductUrl() ?>"></a>
                        <div class="actions">
                            <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart pull-left-none" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><i class="icon-basket icons"></i><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                            <ul class="add-to-links pull-left-none">
                                <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                    <li class="pull-left-none"><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>" class="link-wishlist"><i class="icon-heart icons"></i><?php echo $this->__('Add to Wishlist') ?></a></li>
                                <?php endif; ?>
                                <?php if($_compareUrl=$this->getAddToCompareUrl($_item)): ?>
                                    <li class="pull-left-none"><a href="<?php echo $_compareUrl ?>" class="link-compare"><i class="icon-bar-chart icons"></i><?php echo $this->__('Add to Compare') ?></a></li>
                                <?php endif; ?>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="product-details products-textlink clearfix">
                    <h3 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
                    <?php echo $this->getPriceHtml($_item, true) ?>
                </div>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    <script type="text/javascript">decorateList('crosssell-products-list', 'none-recursive')</script>
</div>
<?php endif; ?>
