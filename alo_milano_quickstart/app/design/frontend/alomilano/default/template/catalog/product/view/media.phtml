/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */

/* @var $this Mage_Catalog_Block_Product_View_Media */
?>
<?php
    $_product   = $this->getProduct();
    $_helper    = $this->helper('catalog/output');
    $helpLabels = $this->helper('alothemes/labels');
    $helpImage  = $this->helper('catalog/image');
    $proImage   = $helpImage->init($_product, 'image');
    $width      = (int) Mage::getStoreConfig('alothemes/detail/imageWidth');
    $height     = (int) Mage::getStoreConfig('alothemes/detail/imageHeight');
    $thumbWidth  = (int) Mage::getStoreConfig('alothemes/detail/thumbWidth');
    $thumbHeight = (int) Mage::getStoreConfig('alothemes/detail/thumbHeight');
    if(!$height){
        $orgWidth   = $proImage->getOriginalWidth();
        $orgHeight  = $proImage->getOriginalHeight();
        $height     = ($width*$orgHeight)/$orgWidth;
    }
    if($width && $height)  $proImage = $proImage->resize($width, $height);
?>
<div class="product-image product-image-zoom">
    <div class="product-image-gallery">
    <?php echo $helpLabels->getLabels($_product); //Product labels ?>
        <img id="image-main"
             class="gallery-image visible img-responsive"
             src="<?php echo $proImage; ?>"
             alt="<?php echo $this->escapeHtml($this->getImageLabel()) ?>"
             title="<?php echo $this->escapeHtml($this->getImageLabel()); ?>" />

        <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
            <?php if ($this->isGalleryImageVisible($_image)): ?>
            <img id="image-<?php echo $i; ?>"
                 class="gallery-image"
                 src="<?php echo $this->getGalleryImageUrl($_image); ?>"
                 data-zoom-image="<?php echo  $this->getGalleryImageUrl($_image); ?>" />
            <?php endif; ?>
        <?php $i++; endforeach; ?>
    </div>
</div>

<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <h2><?php echo $this->__('More Views') ?></h2>
    <ul class="product-image-thumbs">
    <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
        <?php if ($this->isGalleryImageVisible($_image)): ?>
        <li>
            <a class="thumb-link" href="#" title="<?php echo $this->escapeHtml($_image->getLabel()) ?>" data-image-index="<?php echo $i; ?>">
                <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize($thumbWidth, $thumbHeight); ?>"
                      alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
            </a>
        </li>
        <?php endif; ?>
    <?php $i++; endforeach; ?>
    </ul>
</div>
<?php endif; ?>

<?php echo $this->getChildHtml('after'); ?>
