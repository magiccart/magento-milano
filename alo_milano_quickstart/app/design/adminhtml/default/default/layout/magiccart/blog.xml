<?xml version="1.0"?>
<layout version="0.1.0">
    <default> 

        <reference name="head"> 

            <action method="setCanLoadExtJs"><flag>1</flag></action> 

            <action method="setCanLoadTinyMce"><flag>1</flag></action>

            <action method="addJs"><script>prototype/prototype.js</script></action> 

            <action method="addJs"><script>mage/adminhtml/variables.js</script></action> 

            <action method="addJs"><script>mage/adminhtml/wysiwyg/widget.js</script></action> 

            <action method="addJs"><script>lib/flex.js</script></action> 

            <action method="addJs"><script>lib/FABridge.js</script></action> 

            <action method="addJs"><script>mage/adminhtml/flexuploader.js</script></action> 

            <action method="addJs"><script>mage/adminhtml/browser.js</script></action> 
            <action method="addJs"><script>lib/uploader/flow.min.js</script></action> 
            <action method="addJs"><script>lib/uploader/fusty-flow.js</script></action> 
            <action method="addJs"><script>lib/uploader/fusty-flow-factory.js</script></action> 
            <action method="addJs"><script>mage/adminhtml/uploader/instance.js</script></action> 
            <action method="addJs"><script>prototype/window.js</script></action>

            <action method="addItem"><type>js_css</type><name>prototype/windows/themes/default.css</name></action>

            <action method="addCss"><name>lib/prototype/windows/themes/magento.css</name></action>

        </reference> 

    </default>
    <blog_admin_manage_blog_index>
        <update handle="editor" />
        <reference name="content">
            <block type="blog/manage_blog" name="blog" />
        </reference>
    </blog_admin_manage_blog_index>
    <blog_admin_manage_blog_edit>
        <update handle="editor" />
    </blog_admin_manage_blog_edit>
    <blog_admin_manage_blog_new>
        <update handle="editor" />
    </blog_admin_manage_blog_new>
    <blog_admin_manage_comment_index>
        <reference name="content">
            <block type="blog/manage_comment" name="comment" />
        </reference>
    </blog_admin_manage_comment_index>
    <blog_admin_manage_cat_index>
        <reference name="content">
            <block type="adminhtml/store_switcher" name="store_switcher" before="-" />
            <block type="blog/manage_cat" name="cat" />
        </reference>
    </blog_admin_manage_cat_index>
</layout>
