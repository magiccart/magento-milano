/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>

    <?php
        $currCurrencyName = '';
        $html = '<ul class="currency-switcher dropdown">';
        foreach ($this->getCurrencies() as $_code => $_name){
            if($_code == $this->getCurrentCurrencyCode()){
                $currCurrencyName = $_code;
                $html .= '<li class="current">'. $_code .'</li>';
            }else{
                $html .= '<li><a href="'. $this->getSwitchCurrencyUrl($_code) .'">'. $_code .'</a></li>';
            }
        }
        $html .= '</ul>';
    ?>

    <div class="currency-switcher">
         <div class="label-title"><?php echo $this->__('Currency'); ?></div>
        <?php echo $html; ?>
    </div>
<?php endif; ?>
