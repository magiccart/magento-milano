<?php
/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
	<?php
		$currStoreName = $currStoreCode = '';
		$html = '<ul class="language-switcher dropdown">';
		foreach($this->getStores() as $store){
			$storeName = $this->__($this->htmlEscape($store->getName()));
			$storeId = $store->getId();
			$storeCode = $store->getCode();
			$flag = 'style="background-image:url('. $this->getSkinUrl('images/flags/'. $storeCode .'.png') .');"';
			
			if($storeId == $this->getCurrentStoreId()){
				$currStoreName = $storeName; $currStoreCode = $storeCode;
				$html .= '<li class="current"><span class="label dropdown-icon" '. $flag .'>&nbsp;</span></li>';
			}else{
				$html .= '<li><a href="'. $store->getCurrentUrl() .'"><span class="label dropdown-icon" '. $flag .'>&nbsp;</span></a></li>';
			}
		}
		$html .= '</ul>';
    ?>

    <div class="lang-switcher">
         <div class="label-title"><?php echo $this->__('Language'); ?></div>
        <?php echo $html; ?>
    </div>
<?php endif; ?>
